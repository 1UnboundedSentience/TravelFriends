

<% provide(:title, @travel_plan.title) %>
<div class="row">
  <%= render 'sidebar' %>
  <div class="span8">
    <%= render 'navbar' %>

      <form method="get" class="form-inline form-plans">

        <div class="centered"><br />
          <img src="/action/sleep.png" />
          <h3>Find the best accommodation for your customer:</h3>
        </div>
      <div class="row search-box">
      <div class="span2">
      <div class="input-prepend">
        <span class="add-on"><i class="icon-home"></i></span>
        <input name="place_origin" type="text" placeholder="origin" class="span2">
      </div>
      <div class="input-prepend">
        <span class="add-on"><i class="icon-home"></i></span>
        <input name="place_destination" type="text" placeholder="destination" class="span2">
      </div>
      </div>

      <div class="span2">
      <div class="input-prepend">
        <span class="add-on"><i class="icon-calendar"></i></span>
        <input name="date_return" type="text" placeholder="today" class="span2">
      </div>
      <div class="input-prepend">
        <span class="add-on"><i class="icon-calendar"></i></span>
        <input name="date_return" type="text" placeholder="March 4th" class="span2">
      </div>
    </div>

    <div class="span2">
      <div class="input-prepend">
        <span class="add-on"><i class="icon-user"></i></span>
        <select name="passengers" class="input-small">
          <option>1 passenger</option>
          <option>2 passengers</option>
          <option>3 passengers</option>
          <option>4 passengers</option>
        </select>
      </div>
        <button type="submit" class="btn btn-success"><i class="icon-search"></i> Find now</button>
      </div>
    </div>
      </form>
</div>
  </div>
  </div>
</div>
